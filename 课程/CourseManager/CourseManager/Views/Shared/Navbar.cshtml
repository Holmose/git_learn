@using CourseManager.Models
@model IEnumerable<CourseManager.Models.ActionLinks>
@{
    var site = (WebsiteInfo)ViewBag.Site;
}

<div class="content-wrapper">
    <div class="float-left">
        <p class="site-title">@Html.ActionLink(WebsiteInfo.SiteName, "Index", "Home")</p>
    </div>
    <div class="float-right">
        <section id="login">
            @Html.Partial("_LoginPartial")
        </section>
        <div class="navbar-collapse collapse">
            <ul id="menu" class="nav navbar-nav">
                @foreach (var item in Model) {
                    <li>@Html.ActionLink(item.Name.Trim(),item.Action.Trim(),item.Controller.Trim())</li>
                }
            </ul>
        </div>
    </div>
</div>