@model IEnumerable<Booktest.Models.Book>
@{
    ViewBag.Title = "Index";
}

<h2>简化版在线书店</h2>
<table>
    <tr>
        <th>
            作者
        </th>
        <th>
            书名
        </th>
        <th>
            价格
        </th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model) { 
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img alt="封面" src="../../Images/@Html.DisplayFor(modelItem => item.BookCoverUrl)" />
            </td>
            <td>
                @Html.ActionLink("购书", "Order", new { id=item.BookId})
            </td>
        </tr>
    }
</table>
